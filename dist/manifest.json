{
  "manifest_version": 2,
  "name": "RSigTool",
  "version": "0.2.0",
  "description": "RChain Signature Tool",
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "icons": {
    "32": "icons/rchain-32.png",
    "64": "icons/rchain-64.png",
    "128": "icons/rchain-128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/rchain-32.png",
      "64": "icons/rchain-64.png",
      "128": "icons/rchain-128.png"
    },
    "default_title": "RChain Signature Tool",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "js": [
        "ethProvider.js"
      ],
      "matches": [
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*",
        "https://rgov1.netlify.app/*",
        "https://tgrospic.github.io/*"
      ]
    },
    {
      "js": [
        "pageRelay.js"
      ],
      "matches": [
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*",
        "http://*.rhobot.net:8080/*"
      ]
    }
  ]
}